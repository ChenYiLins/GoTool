<Page
    x:Class="GoTool.Views.MscfgPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.Resources>
        <MenuFlyout x:Key="ListView_MenuFlyout">
            <MenuFlyoutItem x:Uid="MscfgPage_ListView_MenuItem_1" Tag="Edit" Click="MenuFlyoutItem_Click" >
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE70F;"/>
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Uid="MscfgPage_ListView_MenuItem_2"  Tag="Set" Click="MenuFlyoutItem_Click" >
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE713;"/>
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
    </Page.Resources>


    <Grid x:Name="ContentArea">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <ContentDialog 
           x:Uid="MscfgPage_Dialog_CmdError"
           x:Name="Dialog_CmdError">
        </ContentDialog>


        <ListView
            x:Name="ListView"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
            SelectionMode="Multiple"
            HorizontalAlignment="Left"
            ContextFlyout="{StaticResource ListView_MenuFlyout}"
            IsItemClickEnabled="True"
            ItemClick="ListView_ItemClick"
            Grid.Row="0"
            Width="900"
            Height="480"
            Margin="0,-20,0,0"
        />

        <TextBlock
            x:Uid="MscfgPage_TextBlock_1"
            Style="{StaticResource BodyTextBlockStyle}"
            Grid.Row="1"
            Margin="0,0,0,0"
        />

        <TextBox
            x:Name="TextBox"
            IsReadOnly="True"
            Height="30"
            Grid.Row="1"
            Margin="60,-20,0,0"
        />
        
    </Grid>
</Page>
