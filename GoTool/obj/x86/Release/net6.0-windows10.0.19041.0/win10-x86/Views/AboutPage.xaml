<Page
    x:Class="GoTool.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <Image Source="/Assets/icon.png" Width="115" Height="115" Margin="-820,-400,0,0"/>
        <TextBlock x:Uid="AboutPage_TextBlock_1" Style="{StaticResource SubtitleTextBlockStyle}" FontSize="18" Margin="130,70,0,0"/>
        <TextBlock x:Uid="AboutPage_TextBlock_2" Style="{StaticResource SubtitleTextBlockStyle}" FontSize="24" Margin="0,130,0,0"/>
        <TextBlock x:Uid="AboutPage_TextBlock_3" Style="{StaticResource BodyTextBlockStyle}" FontSize="16" Margin="0,180,0,0"/>
        <TextBlock x:Uid="AboutPage_TextBlock_4" Style="{StaticResource BodyTextBlockStyle}" FontSize="16" Margin="0,220,0,0"/>
        <TextBlock x:Uid="AboutPage_TextBlock_5" Style="{StaticResource BodyTextBlockStyle}" FontSize="16" Margin="0,260,0,0"/>
        <TextBlock x:Uid="AboutPage_TextBlock_6" Style="{StaticResource BodyTextBlockStyle}" FontSize="16" Margin="0,300,0,0"/>
        <TextBlock x:Uid="AboutPage_TextBlock_7" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" FontSize="24" Margin="130,20,0,0"/>
    </Grid>
</Page>

